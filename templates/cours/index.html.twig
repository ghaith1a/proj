{% extends 'base_back.html.twig' %}

{% block title %}Liste des Cours{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="card border-0 shadow-sm rounded-3">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <div class="card-" style="padding: 20px; text-align: right;">
            <a href="{{ path('app_cours_new') }}" class="btn btn-success btn-lg">
                <i class="fas fa-plus-circle"></i> Ajouter 
            </a>
        </div>
        <h2 class="fw-bold mb-0"><i class="fas fa-book"></i> Liste des Cours</h2>

            </div>
            <div class="card-body p-4">
                {% if cours is empty %}
                    <div class="alert alert-warning text-center fw-semibold">Aucun cours trouvé.</div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Matière</th>
                                    <th>Date</th>
                                    <th colspan="2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for cour in cours %}
                                <tr>
                                    <td>{{ cour.id }}</td>
                                    <td class="fw-semibold">{{ cour.titre }}</td>
                                    <td>{{ cour.descrC }}</td>
                                    <td>{{ cour.matiereC }}</td>
                                    <td>{{ cour.dateC ? cour.dateC|date('d/m/Y H:i') : '-' }}</td>
                                    <td class="actions-cell">
                                        <div class="btn-group">
                                            <a href="{{ path('app_cours_show', {'id': cour.id}) }}" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Devoir
                                            </a>
                                            <a href="{{ path('app_cours_edit', {'id': cour.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                            <form method="post" action="{{ path('app_cours_delete', {'id': cour.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce cours ?');">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <style>
        /* Style du tableau */
        .table th, .table td {
            padding: 12px;
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

        /* Groupe de boutons alignés avec le même espace */
        .btn-group {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        /* Uniformisation des boutons */
        .btn {
            width: 110px;
            text-align: center;
            font-size: 14px;
            padding: 6px 12px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .btn-group {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                font-size: 12px;
                padding: 5px 10px;
            }
        }
    </style>
{% endblock %}
