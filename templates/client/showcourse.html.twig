{% extends 'base_front1.html.twig' %}

{% block title %}{{ cour.titre }} - Détails du cours{% endblock %}

{% block css %}
    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="{{ asset('lib/animate/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}">

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <!-- Star Rating Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-bar-rating/1.2.2/themes/fontawesome-stars.css">

    <!-- Template Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block content %}
    <div class="container-xxl bg-white p-0">
      

        {% block header %}
        <div class="container-fluid bg-primary mb-5">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10 text-center">
                        <h1 class="display-3 text-white animated slideInDown">Our course</h1>
                        <nav aria-label="breadcrumb">
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block course_details %}
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5">
                    <!-- Course Image -->
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="position-relative h-100">
                            <img class="img-fluid rounded w-100 h-100" src="{{ asset('uploads/images/' ~ cour.image) }}" alt="{{ cour.titre }}" style="object-fit: cover;">
                        </div>
                    </div>
                    <!-- Course Details -->
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="h-100">
                            <h6 class="section-title bg-white text-start text-primary pe-3">Course Details</h6>
                            <h1 class="mb-4">{{ cour.titre }}</h1>
                            <p class="mb-4">{{ cour.descrC }}</p>
                            <div class="row g-4 mb-4">
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-book-reader text-primary me-3"></i>
                                        <h6 class="mb-0">Subject: {{ cour.matiereC }}</h6>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fa fa-clock text-primary me-3"></i>
                                        <h6 class="mb-0">Date: {{ cour.dateC|date('d/m/Y H:i') }}</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Support de cours -->
                            <div class="mb-4">
                                <h6 class="section-title bg-white text-start text-primary pe-3">Support de cours</h6>
                                {% if cour.supportC %}
                                    <a href="{{ asset('uploads/supports/' ~ cour.supportC) }}" target="_blank" class="btn btn-secondary">Télécharger le support</a>
                                {% else %}
                                    <p class="text-muted">Aucun support disponible</p>
                                {% endif %}
                            </div>

                          

                            <!-- Action Buttons -->
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <a href="{{ path('app_courses') }}" class="btn btn-primary rounded-pill py-3 px-5 w-100">Back to Courses</a>
                                </div>
                                <div class="col-sm-6">
                                    <a href="{{ path('app_devoirs_by_course', {'id': cour.id }) }}" class="btn btn-primary">Devoirs</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block related_courses %}
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                    <h6 class="section-title bg-white text-center text-primary px-3">Related Courses</h6>
                    <h1 class="mb-4">Similar Courses You May Like</h1>
                </div>
                <div class="row g-4">
                    {% if relatedCourses is defined %}
                        {% for relatedCourse in relatedCourses %}
                            {% if relatedCourse.id != cour.id %} <!-- Exclude current course -->
                                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                    <div class="courses-item position-relative">
                                        <div class="position-relative overflow-hidden rounded">
                                            <img class="img-fluid" src="{{ asset('uploads/images/' ~ relatedCourse.image) }}" alt="{{ relatedCourse.titre }}">
                                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                                <a href="{{ path('app_cours_show', {'id': relatedCourse.id}) }}" class="btn btn-primary rounded-pill py-2 px-4">Read More</a>
                                            </div>
                                        </div>
                                        <div class="bg-light text-center p-4">
                                            <h5 class="mb-3">{{ relatedCourse.titre }}</h5>
                                            <p>{{ relatedCourse.descrC|slice(0, 100) ~ (relatedCourse.descrC|length > 100 ? '...' : '') }}</p>
                                            <div class="d-flex justify-content-between mb-4">
                                                <div class="d-flex align-items-center">
                                                    <i class="fa fa-book-reader text-primary me-2"></i>
                                                    <small>{{ relatedCourse.matiereC }}</small>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <i class="far fa-calendar-alt text-primary me-2"></i>
                                                    <small>{{ relatedCourse.dateC|date('d/m/Y') }}</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
        {% endblock %}

       
    </div>
{% endblock %}

