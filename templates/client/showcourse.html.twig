{% extends 'base_front1.html.twig' %}

{% block title %}{{ cour.titre }} - Détails du cours{% endblock %}

{% block css %}
    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="{{ asset('lib/animate/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}">

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <!-- Star Rating Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-bar-rating/1.2.2/themes/fontawesome-stars.css">

    <!-- Template Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block content %}
    <div class="container-xxl bg-white p-0">
        {% block header %}
        <div class="container-fluid bg-primary mb-5">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10 text-center">
                        <h1 class="display-3 text-white animated slideInDown">Our course</h1>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block course_details %}
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5">
                    <!-- Vérification si la variable cour existe -->
                    {% if cour is defined %}
                        <!-- Course Image -->
                        <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="position-relative h-100">
                                <img class="img-fluid rounded w-100 h-100" src="{{ asset('uploads/images/' ~ cour.image) }}" alt="{{ cour.titre }}" style="object-fit: cover;">
                            </div>
                        </div>
                        <!-- Course Details -->
                        <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                            <div class="h-100">
                                <h6 class="section-title bg-white text-start text-primary pe-3">Course Details</h6>
                                <h1 class="mb-4">{{ cour.titre }}</h1>
                                <p class="mb-4">{{ cour.descrC }}</p>
                                <div class="row g-4 mb-4">
                                    <div class="col-sm-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-book-reader text-primary me-3"></i>
                                            <h6 class="mb-0">Subject: {{ cour.matiereC }}</h6>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-clock text-primary me-3"></i>
                                            <h6 class="mb-0">Date: {{ cour.dateC|date('d/m/Y H:i') }}</h6>
                                        </div>
                                    </div>
                                </div>

                                <!-- Support de cours -->
                                <div class="mb-4">
                                    <h6 class="section-title bg-white text-start text-primary pe-3">Support de cours</h6>
                                    {% if cour.supportC %}
                                        <a href="{{ asset('uploads/supports/' ~ cour.supportC) }}" target="_blank" class="btn btn-secondary">Télécharger le support</a>
                                    {% else %}
                                        <p class="text-muted">Aucun support disponible</p>
                                    {% endif %}
                                </div>

                                <!-- Boutons -->
                                <div class="row g-3">
                                    <div class="col-sm-6">
                                        <a href="{{ path('app_courses') }}" class="btn btn-primary rounded-pill py-3 px-5 w-100">Back to Courses</a>
                                    </div>
                                    <div class="col-sm-6">
                                        <a href="{{ path('app_devoirs_by_course', {'id': cour.id }) }}" class="btn btn-primary">Devoirs</a>
                                    </div>
                                </div>

                                {# <!-- Rating Form -->
                                <div class="mt-4">
                                    <h6 class="section-title bg-white text-start text-primary pe-3">Rate this course</h6>
                                    <form action="{{ path('rate_course', {id: cour.id}) }}" method="post">
                                        <label for="rating">Rate this course:</label>
                                        <select name="rating" id="rating">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                        <button type="submit" class="btn btn-primary">Submit Rating</button>
                                    </form>
                                </div> #}

                                {# <!-- Display existing ratings -->
                                <div class="mt-4">
                                    <h6 class="section-title bg-white text-start text-primary pe-3">Ratings</h6>
                                    <p>Average Rating: {{ cour.averageRating }}</p>
                                    <p>Number of Ratings: {{ cour.ratings|length }}</p>
                                    <ul>
                                        {% for rating in cour.ratings %}
                                            <li>{{ rating.user.username }}: {{ rating.value }}</li>
                                        {% else %}
                                            <li>No ratings yet.</li>
                                        {% endfor %}
                                    </ul>
                                </div> #}
                            </div>
                        </div>
                    {% else %}
                        <p class="text-danger">Erreur : Ce cours n'existe pas ou n'a pas été trouvé.</p>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endblock %}
    </div>
{% endblock %}
