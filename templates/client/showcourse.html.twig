{% extends 'base_front1.html.twig' %}

{% block title %}{{ cour.titre }} - Détails du cours{% endblock %}

{% block css %}
    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="{{ asset('lib/animate/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}">

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <!-- Star Rating Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-bar-rating/1.2.2/themes/fontawesome-stars.css">

    <!-- Template Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

    <style>
        .course-header {
            background: linear-gradient(rgba(24, 29, 56, .7), rgba(24, 29, 56, .7)), url('{{ asset('uploads/images/' ~ cour.image) }}');
            background-size: cover;
            background-position: center;
        }
        
        .course-card {
            border-radius: 15px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background: #ffffff;
        }

        .course-image {
            height: 400px;
            object-fit: cover;
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .course-image:hover {
            transform: scale(1.05);
        }

        .detail-item {
            padding: 15px;
            border-radius: 10px;
            background: #f8f9fa;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

        .detail-item:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .btn-custom {
            border-radius: 30px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .section-title {
            position: relative;
            display: inline-block;
            padding: 5px 15px;
            margin-bottom: 20px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: #06BBCC;
        }

        .support-download-card {
            transition: all 0.3s ease;
            background: linear-gradient(145deg, #ffffff, #f3f3f3);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .support-download-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .support-icon {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(220, 53, 69, 0.1);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .btn-download {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            background: #06BBCC;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .btn-download:hover {
            background: #058e9c;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(6, 187, 204, 0.3);
        }

        .support-download-card:hover .support-icon {
            transform: scale(1.1);
            background: rgba(220, 53, 69, 0.2);
        }
    </style>
{% endblock %}

{% block content %}
    <!-- Course Header -->
    <div class="course-header py-5 mb-5">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                        <h1 class="display-3 text-white animated slideInDown">{{ cour.titre }}</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="{{ path('app_courses') }}">Courses</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">{{ cour.titre }}</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Details -->
    <div class="container py-5">
        <div class="row g-5">
            {% if cour is defined %}
                <!-- Course Image Column -->
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-card p-3">
                        <img class="course-image w-100" src="{{ asset('uploads/images/' ~ cour.image) }}" alt="{{ cour.titre }}">
                    </div>
                </div>

                <!-- Course Details Column -->
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="course-card p-4">
                        <h2 class="section-title">{{ cour.titre }}</h2>
                        <p class="lead mb-4">{{ cour.descrC }}</p>

                        <!-- Course Information -->
                        <div class="mb-4">
                            <div class="detail-item d-flex align-items-center">
                                <i class="fa fa-book-reader text-primary fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-0">Matière</h6>
                                    <p class="mb-0">{{ cour.matiereC }}</p>
                                </div>
                            </div>

                            <div class="detail-item d-flex align-items-center">
                                <i class="fa fa-clock text-primary fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-0">Date</h6>
                                    <p class="mb-0">{{ cour.dateC|date('d/m/Y H:i') }}</p>
                                </div>
                            </div>

                            <div class="detail-item d-flex align-items-center">
                                <i class="fa fa-graduation-cap text-primary fa-2x me-3"></i>
                                <div>
                                    <h6 class="mb-0">Niveau</h6>
                                    <p class="mb-0">{{ cour.niveau }}</p>
                                </div>
                            </div>
                        </div>

                        <!-- Support de cours -->
                        <div class="mb-4">
                            <h4 class="section-title">Support de cours</h4>
                            {% if cour.supportC %}
                                <div class="support-download-card p-3 bg-light rounded-3 border border-2 border-primary border-opacity-25">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <div class="support-icon me-3">
                                                <i class="fas fa-file-pdf fa-2x text-danger"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-1">Support du cours</h6>
                                                <small class="text-muted">Cliquez pour télécharger</small>
                                            </div>
                                        </div>
                                        <a href="{{ asset('uploads/supports/' ~ cour.supportC) }}" 
                                           target="_blank" 
                                           class="btn btn-download">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </div>
                                </div>
                            {% else %}
                                <div class="alert alert-info d-flex align-items-center">
                                    <i class="fas fa-info-circle fa-lg me-3"></i>
                                    <div>
                                        <h6 class="alert-heading mb-1">Aucun support disponible</h6>
                                        <small>Le support pour ce cours n'a pas encore été ajouté.</small>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Action Buttons -->
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <a href="{{ path('app_courses') }}" 
                                   class="btn btn-custom btn-outline-primary w-100">
                                    <i class="fas fa-arrow-left me-2"></i>Retour aux cours
                                </a>
                            </div>
                            <div class="col-sm-6">
                                <a href="{{ path('app_devoirs_by_course', {'id': cour.id }) }}" 
                                   class="btn btn-custom btn-primary w-100">
                                    <i class="fas fa-tasks me-2"></i>Devoirs
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Ce cours n'existe pas ou n'a pas été trouvé.
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
