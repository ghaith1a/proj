{% extends 'base_front1.html.twig' %}

{% block title %}Mes Cours - Alamni{% endblock %}

{% block css %}
    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="{{ asset('lib/animate/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}">

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <!-- Template Stylesheet -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block content %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                <h1 class="mb-3">Mes Cours</h1>
                <p>Découvrez vos cours disponibles</p>
            </div>
            
            <div class="row g-4">
                {% for course in courses %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="card h-100">
                            {% if course.image %}
                                <img src="{{ asset('uploads/images/' ~ course.image) }}" class="card-img-top" alt="{{ course.titre }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ course.titre }}</h5>
                                <p class="card-text">{{ course.descrC }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">{{ course.matiereC }}</small>
                                    <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-primary">Voir détails</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}