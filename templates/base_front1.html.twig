align-items: center.
}

.dropdown-item:hover {
background-color: #f8f9fa;
}

.dropdown-divider {
margin: 0.5rem 0;
}

.text-danger {
color: #dc3545 !important;
}

.rounded-circle {
border: 2px solid #fff;
